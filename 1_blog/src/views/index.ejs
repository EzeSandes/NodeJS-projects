<h2 class="text-4xl font-bold text-gray-800 mb-10">Last articles</h2>

<% if (posts.length === 0) { %>
<p class="text-gray-600">No articles published yet.</p>
<% } else { %>
<div class="space-y-8">
  <% posts.forEach(post => { %>
  <article class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition">
    <h3 class="text-2xl font-bold text-blue-700 mb-2">
      <a href="/post/<%= post.slug %>"><%= post.title %></a>
    </h3>
    <time class="text-sm text-gray-500">
      <%= new Date(post.date).toLocaleDateString('en-US', { year: 'numeric',
      month: 'long', day: 'numeric' }) %>
    </time>
    <p class="mt-3 text-gray-700">
      <%= post.content.split('\n')[0].replace(/^#+\s*/, '') %>...
    </p>
    <a
      href="/post/<%= post.slug %>"
      class="text-blue-600 hover:underline mt-4 inline-block"
    >
      Read more â†’
    </a>
  </article>
  <% }) %>
</div>
<% } %>
