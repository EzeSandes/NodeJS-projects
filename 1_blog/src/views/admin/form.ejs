<!-- src/views/admin/form.ejs -->
<div class="max-w-4xl mx-auto">
  <h1 class="text-4xl font-bold text-gray-800 mb-8">
    <%= post ? 'Edit post' : 'New post' %>
  </h1>

  <form
    action="<%= post ? '/admin/edit/' + post.id : '/admin/new' %>"
    method="POST"
    class="space-y-6"
  >
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Title</label>
      <input
        type="text"
        name="title"
        value="<%= post ? post.title : '' %>"
        required
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      />
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2"
        >Content (Markdown)</label
      >
      <textarea
        name="content"
        rows="20"
        required
        class="w-full px-4 py-2 font-mono text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
      >
<%= post ? post.content : '' %></textarea
      >
    </div>

    <div class="flex items-center">
      <input type="checkbox" name="published" id="published" <%= (post &&
      post.published) ? 'checked' : '' %> class="h-5 w-5 text-blue-600 rounded">
      <label for="published" class="ml-2 text-sm text-gray-700"
        >Published (visible on the blog)</label
      >
    </div>

    <div class="flex gap-4">
      <button
        type="submit"
        class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg transition"
      >
        <%= post ? 'Save changes' : 'Create post' %>
      </button>
      <a
        href="/admin"
        class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-8 rounded-lg transition"
      >
        Cancel
      </a>
    </div>
  </form>
</div>
