<!-- src/views/admin/dashboard.ejs -->
<div class="max-w-6xl mx-auto">
  <!-- Header con saludo + botones -->
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold text-gray-800">Administration Panel</h1>
    <div class="flex gap-4 items-center">
      <span class="text-gray-600">Hello, <%= user.username %>!</span>
      <a
        href="/admin/new"
        class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition"
      >
        + New post
      </a>
      <a
        href="/logout"
        class="bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition"
      >
        Log out
      </a>
    </div>
  </div>

  <!-- Lista de posts o mensaje vacío -->
  <% if (posts.length === 0) { %>
  <div class="text-center py-12 bg-white rounded-lg shadow">
    <p class="text-gray-600 text-lg">
      No posts yet.
      <a href="/admin/new" class="text-blue-600 underline font-medium"
        >Create the first</a
      >
    </p>
  </div>
  <% } else { %>
  <div class="bg-white shadow overflow-hidden rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
          >
            Title
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
          >
            Date
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
          >
            State
          </th>
          <th
            class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"
          >
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% posts.forEach(post => { %>
        <tr class="hover:bg-gray-50 transition">
          <td
            class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
          >
            <a
              href="/post/<%= post.slug %>"
              class="text-blue-600 hover:underline"
            >
              <%= post.title %>
            </a>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= new Date(post.date).toLocaleDateString('en-US', { year:
            'numeric', month: 'long', day: 'numeric' }) %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span
              class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= post.published ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>"
            >
              <%= post.published ? 'Publicado' : 'Borrador' %>
            </span>
          </td>
          <td
            class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium"
          >
            <a
              href="/admin/edit/<%= post.id %>"
              class="text-indigo-600 hover:text-indigo-900 mr-4"
              >Edit</a
            >

            <form
              action="/admin/delete/<%= post.id %>"
              method="POST"
              class="inline"
            >
              <button
                type="submit"
                onclick="return confirm('¿Seguro que quieres borrar este post?')"
                class="text-red-600 hover:text-red-900"
              >
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <% } %>

  <!-- Volver al blog -->
  <div class="mt-10">
    <a href="/" class="text-blue-600 hover:underline text-lg font-medium">
      ← Go back to the blog
    </a>
  </div>
</div>
